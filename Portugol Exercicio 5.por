		mediaPonderada=((mediaA*2)+(mediaB*3)+(mediaC*5))/10
		escreva("MP = ( ",mediaA, " * 2 ) + (" ,mediaB, " * 3 ) + ( " ,mediaC," * 4 ) / ( 1 + 2 + 3 ), = " ,mediaPonderada)
	}
}
